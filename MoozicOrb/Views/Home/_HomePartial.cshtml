<section class="section">
    <h2 class="section-heading">EVENTS CALENDAR</h2>
    <div class="calendar-layout">
        <div class="calendar-box">
            <div class="cal-header">
                <button class="cal-nav prev-month">&lt;</button>
                <span class="cal-month-label">January 2026</span>
                <button class="cal-nav next-month">&gt;</button>
            </div>
            <div class="cal-weekdays">
                <div>S</div><div>M</div><div>T</div><div>W</div><div>T</div><div>F</div><div>S</div>
            </div>
            <div class="cal-days"></div>
        </div>
        <div class="event-info-box">
            <div class="selected-date-big">
                <span class="sel-weekday">Wednesday</span>
                <span class="sel-full-date">Jan 15, 2026</span>
            </div>
            <div class="events-list-container"></div>
            <button class="btn-add-event">ADD EVENT +</button>
        </div>
    </div>
</section>