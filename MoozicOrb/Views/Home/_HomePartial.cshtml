<section class="section">
    <h2 class="section-heading">BY MAP OR GENRE</h2>
    <div class="genre-container">
        <input type="text" class="genre-search" placeholder="Search genres...">
        <div class="genre-pills scroller-thin">
            <span class="pill">Acid-House</span><span class="pill">Afro-Beat</span><span class="pill">Alternative</span>
            <span class="pill">Bass</span><span class="pill">Blues</span><span class="pill">Christian</span>
            <span class="pill">Country</span><span class="pill">Dance</span>
            <span class="pill">Dubstep</span><span class="pill">EDM</span>
            <span class="pill">Folk</span><span class="pill">Hip-Hop</span><span class="pill">Gospel</span>
            <span class="pill">House</span><span class="pill">Indie</span><span class="pill">Jazz</span><span class="pill">Metal</span>
            <span class="pill">Pop</span><span class="pill">R&B</span><span class="pill">Rap</span>
            <span class="pill">Rock</span><span class="pill">Spiritual</span>
            <span class="pill">Techno</span><span class="pill">Trance</span>
        </div>
    </div>
    <div class="globe-box">
        <div id="chartdiv"></div>
    </div>
</section>

