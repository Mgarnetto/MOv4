<div class="container-fluid fade-in" style="max-width: 1000px; margin: 0 auto; padding-top: 10px;">

    <div class="audio-header-card">

        <div class="header-left">
            <h2 class="audio-title-text mb-0">
                <i class="fas fa-headphones-alt me-2 text-info"></i> Audio Discovery
            </h2>
        </div>

        <div class="header-right">

            <div class="shuffle-text-group">
                <span class="shuffle-label">SHUFFLE FEED</span>
                <i class="fas fa-long-arrow-alt-right text-info shuffle-arrow"></i>
            </div>

            <div class="disc-wrapper" onclick="window.triggerShuffleAnimation()" title="Shuffle Feed">
                <i id="shuffle-disc" class="fas fa-compact-disc"></i>
            </div>

        </div>

    </div>

    <div id="audio-feed-list" class="pb-5"></div>

</div>