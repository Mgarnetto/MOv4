@model MoozicOrb.Models.CreatorViewModel

@{
    var contextType = "user";
    var contextId = Model.UserId.ToString();
}

<input type="hidden" id="page-signalr-context" value="@Model.SignalRGroup" />

<div class="hero profile-hero mb-4">

    <div class="hero-bg" style="background-image: url('@(string.IsNullOrEmpty(Model.CoverImage) ? "/img/default_cover.jpg" : Model.CoverImage)');">
        <div class="hero-overlay-gradient"></div>
    </div>

    <div class="profile-hero-content container">
        <div class="hero-flex-wrapper">

            <img src="@(string.IsNullOrEmpty(Model.ProfilePic) ? "/img/profile_default.jpg" : Model.ProfilePic)"
                 class="profile-avatar"
                 alt="@Model.DisplayName"
                 onerror="this.src='/img/profile_default.jpg'">

            <div class="hero-text-block">
                <h1 class="profile-name">@Model.DisplayName</h1>
                <p class="profile-username">@@@Model.UserName</p>
                <p class="profile-bio">@Model.Bio</p>

                <div class="action-buttons-container">
                    @if (Model.IsCurrentUser)
                    {
                        <a href="/settings/account" class="btn btn-sidebar-fill text-decoration-none d-inline-flex align-items-center">
                            <i class="fas fa-cog me-2"></i>Edit Profile
                        </a>
                    }
                    else
                    {
                        @if (Model.IsFollowing)
                        {
                            <button id="btn-follow-action"
                                    class="btn-sidebar-outline me-2"
                                    data-id="@Model.UserId"
                                    data-status="following">
                                Unfollow
                            </button>
                        }
                        else
                        {
                            <button id="btn-follow-action"
                                    class="btn-login me-2"
                                    data-id="@Model.UserId"
                                    data-status="not-following">
                                Follow
                            </button>
                        }

                        <button class="btn-sidebar-outline" onclick="startChat(@Model.UserId)">
                            <i class="fas fa-comment-alt me-2"></i>Message
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-grid-layout">
    <div class="main-column">
        @if (Model.LayoutOrder == null || Model.LayoutOrder.Count == 0)
        {
            if (Model.IsCurrentUser)
            {
                <div class="mb-5">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h4 class="section-heading mb-0">Updates</h4>
                    </div>
                    @await Component.InvokeAsync("PostFeed", new
                    {
                        contextType = "user",
                        contextId = Model.UserId.ToString(),
                        allowPosting = Model.IsCurrentUser,
                        inputType = "standard"
                        })
        </div>
                }
        }
        else
        {
            foreach (var layoutItem in Model.LayoutOrder)
            {
                <div class="mb-5" id="section-@layoutItem">
                    @if (layoutItem == "posts")
                    {
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h4 class="section-heading mb-0">Updates</h4>
                        </div>
                        @await Component.InvokeAsync("PostFeed", new
                        {
                            contextType = "user",
                        contextId = Model.UserId.ToString(),
                        allowPosting = Model.IsCurrentUser,
                        inputType = "standard"
                        })
                        }
                    else if (layoutItem == "music")
                    {
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h4 class="section-heading mb-0">Discography</h4>
                        </div>
                        @await Component.InvokeAsync("Discography", new
                        {
                            userId = Model.UserId,
                        isCurrentUser = Model.IsCurrentUser
                        })
            <br />
                        }
                    else if (layoutItem == "store")
                    {
                        <div style="margin-bottom: 15px;">
                            <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px;">
                                <h4 class="section-heading" style="margin: 0;">Store</h4>

                                <a href="/creator/@Model.UserId/store" class="spa-route" style="background-color: transparent; color: #fff; padding: 6px 16px; border-radius: 20px; text-decoration: none; font-size: 14px; font-weight: bold; border: 1px solid #555; transition: background-color 0.2s; display: flex; align-items: center; gap: 5px;">
                                    Visit my Store <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>

                            @if (Model.IsCurrentUser)
                            {
                                <div style="margin-top: 10px;">
                                    <button class="commerce-btn-submit" style="font-size: 0.9em; padding: 6px 12px; margin: 0;" onclick="window.openCommerceModal('user', '@Model.UserId', 'merch')">
                                        <i class="fas fa-plus" style="margin-right: 5px;"></i> Add Product
                                    </button>
                                </div>
                            }
                        </div>

                        <div class="store-carousel-wrapper">
                            <button class="store-carousel-btn left" onclick="window.scrollStoreCarousel(-1)">
                                <i class="fas fa-chevron-left"></i>
                            </button>

                            <div class="store-carousel-track" id="store-carousel-container">
                            </div>

                            <button class="store-carousel-btn right" onclick="window.scrollStoreCarousel(1)">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <aside class="side-column">
        @* <div class="widget-card">
            <h5 class="widget-title">About</h5>
            <p class="widget-text text-muted">
                @(string.IsNullOrEmpty(Model.Bio) ? "No bio information provided." : Model.Bio)
            </p>
            <div class="separator my-3" style="background: #333;"></div>
            <div class="text-muted small">
                <i class="far fa-calendar-alt me-2 text-accent"></i> Joined Jan 2026
            </div>
        </div> *@

        <div class="widget-card">
            <h5 class="widget-title mb-3">Network</h5>
            <div class="d-flex justify-content-between text-center mb-3">
                <div>
                    <strong id="profile-stat-followers" class="d-block text-white fs-5">@Model.FollowersCount</strong>
                    <span class="text-muted small">Followers</span>
                </div>
                <div>
                    <strong id="profile-stat-following" class="d-block text-white fs-5">@Model.FollowingCount</strong>
                    <span class="text-muted small">Following</span>
                </div>
                <div>
                    Joined Jan 2026
                </div>
            </div>
        </div>

        <div style="display: flex; gap: 15px; margin-top: 15px; margin-bottom: 20px;">

            <a href="/creator/@Model.UserId/photos" class="spa-route" style="flex: 1; height: 75px; background: #1a1a1a; border: 1px solid #333; border-radius: 12px; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; text-decoration: none; transition: all 0.2s ease; box-shadow: 0 4px 6px rgba(0,0,0,0.3);"
               onmouseover="this.style.background='#222'; this.style.borderColor='#00AEEF'; this.style.transform='translateY(-2px)';"
               onmouseout="this.style.background='#1a1a1a'; this.style.borderColor='#333'; this.style.transform='translateY(0)';">
                <i class="fas fa-image" style="font-size: 1.6rem; margin-bottom: 5px; color: #00AEEF;"></i>
                <span style="font-family: 'Outfit', sans-serif; font-weight: 600; font-size: 0.9rem; letter-spacing: 0.5px;">Images</span>
            </a>

            <a href="/creator/@Model.UserId/videos" class="spa-route" style="flex: 1; height: 75px; background: #1a1a1a; border: 1px solid #333; border-radius: 12px; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; text-decoration: none; transition: all 0.2s ease; box-shadow: 0 4px 6px rgba(0,0,0,0.3);"
               onmouseover="this.style.background='#222'; this.style.borderColor='#00AEEF'; this.style.transform='translateY(-2px)';"
               onmouseout="this.style.background='#1a1a1a'; this.style.borderColor='#333'; this.style.transform='translateY(0)';">
                <i class="fas fa-video" style="font-size: 1.6rem; margin-bottom: 5px; color: #00AEEF;"></i>
                <span style="font-family: 'Outfit', sans-serif; font-weight: 600; font-size: 0.9rem; letter-spacing: 0.5px;">Videos</span>
            </a>

        </div>
    </aside>
</div>