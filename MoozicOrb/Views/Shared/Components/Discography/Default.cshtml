@model MoozicOrb.ViewComponents.DiscographyViewModel

<div class="discography-wrapper">

    @* =========================================
       SCENARIO A: THE SLIDING CAROUSEL
       ========================================= *@
    @if (Model.IsCarousel && Model.FeaturedCollection != null && Model.FeaturedCollection.Items.Count > 0)
    {
        <div class="disco-carousel-container">
            <button class="disco-carousel-btn left" onclick="scrollDiscoCarousel(-1, @Model.UserId)">
                <i class="fas fa-chevron-left"></i>
            </button>

            <div class="disco-carousel-track" id="disco-carousel-@Model.UserId">
                @foreach (var item in Model.FeaturedCollection.Items)
                {
                    string badgeText = item.TargetType == 4 ? "ALBUM" : "SINGLE";
                    decimal? mockPrice = null; // Prep for Commerce Engine

                    <div class="disco-card">
                        <div class="disco-card-art" onclick="window.AudioPlayer.playTrack('@item.Url', { title: '@item.Title.Replace("'", "\\'")', artist: '@item.ArtistName.Replace("'", "\\'")', cover: '@item.ArtUrl' })">
                            <img src="@(string.IsNullOrEmpty(item.ArtUrl) ? "/img/default_cover.jpg" : item.ArtUrl)" alt="cover">
                            <div class="disco-badge-type">@badgeText</div>
                            @if (mockPrice.HasValue && mockPrice.Value > 0)
                            {
                                <div class="disco-badge-price">$@mockPrice.Value.ToString("0.00")</div>
                            }
                            <button class="disco-btn-add" onclick="window.OrbSavePanel.open(@item.TargetId, @item.TargetType, 'audio'); event.stopPropagation();" title="Add to Playlist">
                                <i class="fas fa-plus"></i>
                            </button>
                            <div class="disco-play-overlay">
                                <i class="fas fa-play-circle"></i>
                            </div>
                        </div>

                        <div class="disco-card-info">
                            <h5 class="text-truncate" title="@item.Title">@item.Title</h5>
                            <p class="text-truncate text-muted small">@item.ArtistName</p>
                        </div>
                    </div>
                }
            </div>

            <button class="disco-carousel-btn right" onclick="scrollDiscoCarousel(1, @Model.UserId)">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    }

    @* =========================================
       SCENARIO B: THE EXPANDABLE FOLDER (FALLBACK)
       ========================================= *@
    else if (!Model.IsCarousel && Model.FallbackCollection != null && Model.FallbackCollection.Items.Count > 0)
    {
        <div class="collection-box">
            <div class="collection-header" onclick="toggleCollection(this)">
                <div class="collection-info">
                    <img src="@Model.FallbackCollection.CoverImageUrl" alt="cover" class="collection-cover" onerror="this.src='/img/default_cover.jpg'">
                    <div class="collection-text">
                        @* <h5>@Model.FallbackCollection.Title</h5> *@
                        <h5>Most Recent</h5>
                        <p>@Model.FallbackCollection.Items.Count Tracks</p>
                    </div>
                </div>
                <div class="collection-actions">
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </div>
            </div>

            <div class="collection-tracks-wrapper">
                <div class="tracks-inner">
                    @foreach (var item in Model.FallbackCollection.Items)
                    {
                        <div class="track-row" onclick="window.AudioPlayer.playTrack('@item.Url', { title: '@item.Title.Replace("'", "\\'")', artist: '@item.ArtistName.Replace("'", "\\'")', cover: '@item.ArtUrl' })">

                            <div class="track-icon">
                                <i class="fas fa-play"></i>
                            </div>

                            <div class="track-data">
                                <div class="track-name">@item.Title</div>
                                <div class="track-artist">@item.ArtistName</div>
                            </div>

                            <button class="btn-save-track" onclick="window.OrbSavePanel.open(@item.TargetId, 1, 'audio'); event.stopPropagation();" title="Add to Playlist">
                                <i class="fas fa-plus"></i>
                            </button>

                            <div class="track-duration">
                                <i class="fas fa-waveform text-muted"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @* =========================================
       SCENARIO C: EMPTY STATE
       ========================================= *@
    else
    {
        <div class="empty-state">
            <i class="fas fa-compact-disc"></i>
            <p>No audio uploads yet.</p>
        </div>
    }

    
</div>

<script>
    function scrollDiscoCarousel(dir, userId) {
        const track = document.getElementById('disco-carousel-' + userId);
        if (track) {
            const scrollAmount = 200 * dir;
            track.scrollBy({ left: scrollAmount, behavior: 'smooth' });
        }
    }
</script>

<style>
    :root {
        --disco-bg: #121212;
        --disco-card-bg: #1e1e1e;
        --disco-accent: #00d2ff;
        --disco-text-main: #ffffff;
        --disco-text-sub: #aaaaaa;
    }

    .discography-wrapper {
        width: 100%;
        color: var(--disco-text-main);
    }

    /* --- CAROUSEL STYLES --- */
    .disco-carousel-container {
        position: relative;
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .disco-carousel-track {
        display: flex;
        gap: 20px;
        overflow-x: auto;
        scrollbar-width: none;
        scroll-snap-type: x mandatory;
        padding-bottom: 10px;
        flex-grow: 1;
    }

        .disco-carousel-track::-webkit-scrollbar {
            display: none;
        }

    .disco-card {
        width: 160px;
        flex-shrink: 0;
        scroll-snap-align: start;
        cursor: pointer;
    }

    .disco-card-art {
        width: 100%;
        aspect-ratio: 1/1;
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.4);
    }

        .disco-card-art img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .disco-card-art:hover img {
            transform: scale(1.05);
        }

    .disco-badge-type {
        position: absolute;
        top: 8px;
        left: 8px;
        background: rgba(0,0,0,0.75);
        color: #fff;
        font-size: 0.65rem;
        font-weight: bold;
        padding: 4px 8px;
        border-radius: 4px;
        backdrop-filter: blur(4px);
    }

    .disco-badge-price {
        position: absolute;
        top: 8px;
        right: 8px;
        background: var(--disco-accent);
        color: #000;
        font-size: 0.75rem;
        font-weight: bold;
        padding: 4px 8px;
        border-radius: 4px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.5);
    }

    .disco-btn-add {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: rgba(0,0,0,0.6);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 50%;
        width: 35px;
        height: 35px;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transform: translateY(10px);
        transition: all 0.2s ease;
        z-index: 10;
    }

        .disco-btn-add:hover {
            background: var(--disco-accent);
            color: #000;
        }

    .disco-play-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.4);
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 3.5rem;
        color: rgba(255,255,255,0.9);
        opacity: 0;
        transition: opacity 0.2s ease;
        pointer-events: none;
    }

    .disco-card-art:hover .disco-btn-add {
        opacity: 1;
        transform: translateY(0);
    }

    .disco-card-art:hover .disco-play-overlay {
        opacity: 1;
    }

    .disco-card-info {
        margin-top: 12px;
        text-align: left;
    }

        .disco-card-info h5 {
            margin: 0 0 3px 0;
            font-size: 0.95rem;
            font-weight: 700;
            color: #fff;
        }

        .disco-card-info p {
            margin: 0;
            font-size: 0.8rem;
        }

    .disco-carousel-btn {
        background: rgba(0,0,0,0.6);
        border: 1px solid rgba(255,255,255,0.1);
        color: #fff;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        position: absolute;
        z-index: 20;
        transition: background 0.2s, transform 0.2s;
    }

        .disco-carousel-btn:hover {
            background: var(--disco-accent);
            color: #000;
            transform: scale(1.1);
        }

        .disco-carousel-btn.left {
            left: -15px;
        }

        .disco-carousel-btn.right {
            right: -15px;
        }


    /* --- EXPANDABLE FOLDER STYLES --- */
    .collection-box {
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.05);
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 15px;
        transition: border-color 0.3s;
    }

        .collection-box:hover {
            border-color: rgba(255,255,255,0.15);
        }

    .collection-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        cursor: pointer;
        user-select: none;
        background: rgba(0,0,0,0.2);
    }

    .collection-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .collection-cover {
        width: 50px;
        height: 50px;
        border-radius: 8px;
        object-fit: cover;
    }

    .collection-text h5 {
        margin: 0 0 4px 0;
        font-size: 1.05rem;
        font-weight: 600;
        color: #fff;
    }

    .collection-text p {
        margin: 0;
        font-size: 0.85rem;
        color: #aaa;
    }

    .collection-actions .toggle-icon {
        transition: transform 0.3s ease;
        color: #888;
    }

    /* The Magic Expand/Collapse CSS */
    .collection-tracks-wrapper {
        max-height: 0;
        opacity: 0;
        overflow: hidden;
        transition: max-height 0.4s ease, opacity 0.3s ease;
    }

    .collection-box.expanded .collection-tracks-wrapper {
        max-height: 2000px;
        opacity: 1;
    }

    .collection-box.expanded .collection-actions .toggle-icon {
        transform: rotate(180deg);
    }

    .tracks-inner {
        padding: 10px 15px 15px 15px;
        border-top: 1px solid rgba(255,255,255,0.05);
    }

    .track-row {
        display: flex;
        align-items: center;
        padding: 10px;
        cursor: pointer;
        transition: background 0.1s;
        border-radius: 8px;
        margin-bottom: 2px;
    }

        .track-row:hover {
            background: rgba(255,255,255,0.05);
        }

    .track-icon {
        width: 30px;
        color: #555;
        display: flex;
        justify-content: center;
        font-size: 0.9rem;
    }

    .track-row:hover .track-icon {
        color: var(--disco-accent);
    }

    .track-data {
        flex-grow: 1;
        margin-left: 10px;
    }

    .track-name {
        font-weight: 600;
        color: white;
        font-size: 0.95rem;
    }

    .track-artist {
        font-size: 0.8rem;
        color: #888;
        margin-top: 2px;
    }

    .btn-save-track {
        background: transparent;
        border: none;
        color: #888;
        font-size: 1rem;
        padding: 8px;
        margin-right: 5px;
        cursor: pointer;
        transition: color 0.2s;
    }

        .btn-save-track:hover {
            color: var(--disco-accent);
            transform: scale(1.1);
        }

    .track-duration {
        color: #555;
        font-size: 0.9rem;
    }

    /* --- EMPTY STATE --- */
    .empty-state {
        text-align: center;
        padding: 50px 20px;
        color: #555;
        background: rgba(0,0,0,0.2);
        border-radius: 12px;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            display: block;
            opacity: 0.5;
        }

        .empty-state p {
            margin: 0;
            font-size: 0.95rem;
        }

    /* BUTTON HOVER EFFECT */
    .btn-outline-info:hover {
        background-color: var(--disco-accent);
        color: #000 !important;
    }
</style>